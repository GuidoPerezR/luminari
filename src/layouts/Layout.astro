---
import "../styles/global.css";
import Navbar from "../sections/Navbar.astro";
import Footer from "../sections/Footer.astro";
---

<!doctype html>
<html lang="es-MX" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Galería de Arte Luminari</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta
      name="description"
      content="Galería de Arte Luminari - Arte visual que desafía los límites de la creatividad y la expresión artística"
    />

    <meta property="og:title" content="Galería de Arte Luminari" />
    <meta
      property="og:description"
      content="Galería de Arte Luminari - Arte visual que desafía los límites de la creatividad y la expresión artística"
    />
    <meta
      property="og:image"
      content="https://luminari-gallery.vercel.app/assets/og-image.jpg"
    />
    <meta property="og:image:width" content="1920" />
    <meta property="og:image:height" content="1080" />
    <meta
      property="og:image:alt"
      content="Imagen og para Galeria de Arte Luminari"
    />

    <meta name="robots" content="index, follow" />
  </head>
  <body>
    <Navbar />
    <main
      class="flex flex-col items-center justify-center bg-secondary overflow-hidden"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    color-scheme: dark light;
  }
</style>
