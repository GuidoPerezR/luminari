---
import Button from "../components/Button.astro";
---

<section
  class="min-h-dvh w-full
 p-6 flex gap-8 flex-col justify-center items-center bg-[url('./assets/mobile-bg.webp')] md:bg-[url('./assets/desktop-bg.webp')] bg-cover bg-center"
  id="hero"
>
  <header
    class="text-center flex flex-col justify-center items-center"
    id="title"
  >
    <h2
      class="text-5xl font-bold bg-stone-900/10 backdrop-blur-sm w-fit md:text-6xl"
    >
      Galería de Arte
    </h2>
    <h1
      class="text-5xl font-bold text-center text-primary bg-stone-900/10 backdrop-blur-sm w-fit md:text-6xl"
    >
      Luminari
    </h1>
  </header>
  <p
    class="prose prose-invert text-white text-center text-xl md:text-2xl"
    id="description"
  >
    Descubre una colección única de arte visual que desafía los límites de la
    creatividad y la expresión artística
  </p>
  <footer
    class="flex flex-col gap-4 w-full max-w-lg md:flex-row"
    id="hero-footer"
  >
    <Button href="#gallery" size="lg">Explorar Galería</Button>
    <a
      href="#about-us"
      class="relative inline-block py-2.5 bg-secondary rounded-xl w-full text-center font-semibold text-lg text-primary overflow-hidden z-10 transition-colors duration-300 hvr-sweep-to-top"
      >Sobre Nosotros</a
    >
  </footer>
</section>

<script>
  import { gsap } from "gsap";
  import { SplitText } from "gsap/SplitText";

  gsap.registerPlugin(SplitText);

  const headerContent = new SplitText("#title", {
    type: "words",
  });

  gsap.from(headerContent.words, {
    duration: 1,
    y: 20,
    autoAlpha: 0,
    stagger: 0.1,
    filter: "blur(10px)",
  });

  gsap.from("#description", {
    duration: 1,
    autoAlpha: 0,
    y: 20,
    ease: "power1.out",
  });

  gsap.from("#hero-footer", {
    duration: 1,
    autoAlpha: 0,
    y: 20,
    ease: "power1.out",
  });
</script>
