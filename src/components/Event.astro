---
import Button from "./Button.astro";

const { event_type, event_icon, name, description, date, time, location } =
  Astro.props;
---

<article
  class="flex flex-col bg-secondary rounded-xl px-10 py-12 gap-6 w-full lg:flex-row"
>
  <div class="flex flex-col gap-6 justify-center flex-1/3">
    <header class="flex gap-4">
      <span
        class="bg-primary text-tertiary font-semibold
      py-1 px-4 rounded-2xl text-sm"
        >Proximamente</span
      >
      <span
        class="bg-tertiary text-primary font-semibold
      py-1 px-4 rounded-2xl text-sm"
        >{event_type}</span
      >
    </header>
    <div class="flex gap-4">
      <div class="text-white">
        <svg class="size-12">
          <use xlink:href={`./assets/sprite.svg#${event_icon}`}></use>
        </svg>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-3xl font-bold text-balance">{name}</h3>
        <p class="prose prose-invert md:text-lg">{description}</p>
      </div>
    </div>
  </div>
  <div class="flex flex-col gap-6 flex-1">
    <p class="flex gap-4 items-center font-bold text-lg">
      <svg class="size-8 text-primary">
        <use xlink:href={`./assets/sprite.svg#calendar-icon`}></use>
      </svg>
      {date}
    </p>
    <p class="flex gap-4 items-center text-lg">
      <svg class="size-8 text-primary">
        <use xlink:href={`./assets/sprite.svg#clock-icon`}></use>
      </svg>
      {time}
    </p>
    <p class="flex gap-4 items-center text-lg">
      <svg class="size-8 text-primary">
        <use xlink:href={`./assets/sprite.svg#location-icon`}></use>
      </svg>
      {location}
    </p>
    <Button href="/" size="lg">Reservar Lugar</Button>
  </div>
</article>
