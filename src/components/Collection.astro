    <div class="w-full h-72 lg:h-full lg:flex-1/2">
      <img
        src=`./assets/${image}.webp`
        alt={title}
        class="w-full h-full object-cover rounded-t-xl lg:rounded-t-none lg:rounded-l-xl"
      />
    </div>
    <div
      class="bg-secondary flex-1/2 p-8 py-10 flex flex-col gap-6 justify-between rounded-b-xl lg:justify-center lg:rounded-b-none lg:rounded-r-xl lg:p-12"
    >
      <h3 class="text-3xl font-bold">{title}</h3>
      <p class="prose prose-invert md:text-lg">{description}</p>
