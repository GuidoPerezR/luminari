---
const { icon, number, text } = Astro.props;
---

<div class="flex flex-col gap-2 items-center group">
  <svg
    class="size-10 text-primary mb-2 group-hover:scale-120 transition-all duration-300"
  >
    <use xlink:href={`./assets/sprite.svg#${icon}`}></use>
  </svg>
  <span class="text-4xl font-bold">{number}</span>
  <span>{text}</span>
</div>
